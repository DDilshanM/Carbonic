<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/editbuyer.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
   
     {{#each userdata}}

     
    <form action="/auth/updatebuyer/:id" method="post">
    <div class="wrapper">
    <div class="title">
     Edit Your Details
    </div>
    <div class="form">
       <div class="inputfield">
          <label>Name</label>
          <input type="text" class="input" name="id" value="{{this.id}}">
          <input type="text" class="input" name="name" value="{{this.name}}">
       </div>  
        
        
      
        
        <div class="inputfield">
           
          <label>Email Address</label>
          <input type="text" class="input" name="email" value="{{this.email}}">
       </div> 
	   <div class="inputfield">
          <label>Address</label>
          {{!-- <textarea class="textarea" name="address" value="{{this.address}}"></textarea> --}}
           <input type="text" class="input" name="address" value="{{this.address}}">
       </div> 
      <div class="inputfield">
          <label>Phone Number</label>
          <input type="text" class="input" name="contactNumber" value="{{this.contactNumber}}">
       
     
      
      <div class="inputfield">
        <input type="submit" value="Update" class="btn">
      </div>
    </div>
</div>	
	</form>
   {{/each}}
  
</body>
</html>
