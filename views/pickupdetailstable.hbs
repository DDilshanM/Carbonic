<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
     
        <title>Pickup Details</title>
        <link rel="stylesheet" href="/pckdetailstable.css">
        </head>
    
            
    
    <main>
         <body>
        
        <!--MDB Tables-->
        <div class="container mt-4">
            <div class="card mb-4">
                <div class="card-body">
                    <!-- Grid row -->
                    <div class="row">
                        <!-- Grid column -->
                        <div class="col-md-12">
                            <h2 class="pt-3 pb-4 text-center font-bold font-up deep-purple-text">Handling Pickups</h2>
                                <input class="form-control my-0 py-1 pl-3 purple-border" type="text" placeholder="Search by date..." aria-label="Search">
                                <span class="input-group-addon waves-effect purple lighten-2" id="basic-addon1"><a><i class="fa fa-search white-text" aria-hidden="true"></i></a></span>
                            </div>
                        </div>
                        <!-- Grid column -->
                    </div>
                    <!-- Grid row -->
                    <!--Table-->
                    <table class="table table-striped">
                        <!--Table head-->
                        <thead>
                            <tr>
                                <th>Pickup id</th>
                                <th>Buyer Name</th>
                                <th>Province</th>
                                <th>Mobile</th>
                                <th>Pickup Time</th>
                                <th>Pickup Date</th>
                                <th>Driver NIC</th>
                                <th>Vehicle No</th>
                                 <th>Buyer ID</th>
                                <th>Dispatched/not</th>
                                <th>Payement/not</th>
                                <th>Delete Pickup</th>
                               

                            </tr>
                        </thead>
                        <!--Table head-->
                        <!--Table body-->
                        <tbody>
                            {{#each pickupobj}}
                            <tr>
                                <td>{{this.pid }}</td>
                                <td>{{ this.buyername }}</td>
                                <td>{{ this. province}}</td>
                                <td>{{ this.mobile }}</td>
                                <td>{{ this.settime}}</td>
                                <td>{{ this.setdate }}</td>
                                <td>{{ this.dnic }}</td>
                                <td>{{ this.vno }}</td>
                                <td>{{ this.buyerid }}</td>
                                <td><input type="checkbox"></td>
                                <td><input type="checkbox"></td>
                                <td><button type="button" id="" name="">Delete</button></td>
                            </tr>
                            {{/each}}
                        </tbody>
                        <!--Table body-->
                    </table>
                    <!--Table-->
                </div>
            </div>
            </body>
    </html>