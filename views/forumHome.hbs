        </div>
      </form>
      </div>

      <!--end Quction form-->  

        <div class="topic">
          <h1>All Questions</h1>
          <h5 class="amount">{{rowcount}}- questios</h5>
        </div>
      
      <p class="postinfo"> </p>


      

      <!--post container-->
      {{#each post}}
      
      <div class="post-container">
        <div class="post-detail post-center">
          <div class="post-user">
            <a href="#"><small>{{this.bid}}</small></a>
          </div>
          <div class="post-time commen-margin">
            <small> 
              {{this.date}}
            </small>
          </div><!---->
          <div class="post-status  commen-margin">
            02 -<small> Like</small> <br>
            05-<small>Reply</small>
          </div>
        </div>
        <div class="post-contend post-center" >
          <div class="subject">
            <a href="/forumHome/forumPost/{{this.pid}}/{{this.psubject}}/{{this.bid}}/{{this.pdescription}}/{{this.date}}"><!---->
             {{this.psubject}}
            </a>
          </div>
          <div class="description commen-margin">
            {{this.pdescription}}
          </div>
        </div>
      </div>
      
      <p class="postinfo"> </p>  
      {{/each}}
      <!-- end post container-->

    
